<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.examenkaart" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <name>OdiseeAdministratie</name>
    <description>
    	Deze applicatie digitaliseert de examenkaart
    </description>
    <icon src="icon.png" />
    <author email="ruben.alliet@student.odisee.be" href="http://cordova.io">
        Seppe Hoste, Gilles Sollem√© en Ruben Alliet
    </author>
    <preference name="phonegap-version" value="3.7.0" />
    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="true" />
    <preference name="target-device" value="universal" />
    <preference name="exit-on-suspend" value="false" />
    <access origin="*" />
    <feature name="NfcPlugin">
        <param name="android-package" value="com.chariotsolutions.nfc.plugin.NfcPlugin" />
        <param name="onload" value="true" />
    </feature>
</widget>
